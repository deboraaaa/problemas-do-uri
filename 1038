#include<iostream>
#include <iomanip> 
using namespace std;

int main()
{
	int codigo,quantidade;
	double valor;
	
	cin>>codigo;
	cin>>quantidade;
	
	if(codigo==1)
	{
		valor=4.00*quantidade;
	} else if(codigo==2)
			{
				valor=4.50*quantidade;
			} else if(codigo==3)
					{
						valor=5.00*quantidade;
					} else if(codigo==4)
					{
						valor=2.00*quantidade;
					}else if(codigo==5)
					{
						valor=1.50*quantidade;
					}
					
	cout<<"Total: R$ "<<setprecision(2)<<fixed<<valor<<endl;
}
